<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
  <!-- Sidebar -->
  <aside class="md:col-span-1">
    <div class="border border-[var(--border)] bg-[var(--surface)] shadow-sm overflow-hidden">
      <div class="border-b border-[var(--border-muted)] bg-gradient-to-b from-[var(--surface2)] to-[var(--surface)] px-4 py-3">
        <div class="font-black text-lg cursor-pointer"><%= link_to @user.username, profile_path(@user.id) %></div>
      </div>

      <div class="p-4 flex flex-col items-center space-y-4">
          <%= render "shared/avatar", user: @user, size: 128 %>
          <% if @user.admin? %>
            <div class="text-xs text-[var(--muted)] font-bold uppercase tracking-wide">Admin</div>
          <% end %>
          <div class="text-sm text-center">
            <div class="font-semibold text-[var(--text)]">Member since <%= @user.created_at.strftime("%b %-d, %Y") %></div>
            <div class="font-semibold text-[var(--text)]"><%= @paste_count %> <%= "paste".pluralize(@paste_count) %></div>
          </div>
      </div>

      <div class="p-4 border-t border-[var(--border-muted)]">
        <% if @user.bio.present? %>
          <div class="text-xs font-bold uppercase tracking-wide text-[var(--muted)] mb-1">About me</div>
          <div class="text-sm text-[var(--text)] [var(--surface)]space-pre-line"><%= h @user.bio %></div>
        <% end %>

        <% if @user.link.present? %>
          <div class="text-xs font-bold uppercase tracking-wide text-[var(--muted)] mb-1 mt-4">Website</div>
          <div>
            <%= link_to @user.link, @user.link, class: link_class(variant: :external, size: :sm), target: "_blank", rel: "noopener" %>
          </div>
        <% end %>

        <% if !@user.bio.present? && !@user.link.present? %>
          <div class="text-sm text-[var(--muted)]">This user has very little to share!</div>
        <% end %>
      </div>

      <% if current_user == @user || current_user&.admin? %>
        <details class="w-full p-4 bg-[var(--surface)] border-t border-b border-[var(--border-muted)] hover:bg-[var(--surface2)] hover:cursor-pointer" data-controller="invite-codes">
          <summary class="cursor-pointer text-md text-[var(--muted)]">Invite codes</summary>
          <div class="mt-4 mb-4">
          <button type="button" 
            data-invite-codes-target="button"
            data-action="click->invite-codes#copy"
            class="border bg-[var(--button-bg)] border-[var(--button-border)] px-2 py-1 text-sm font-bold shadow-sm hover:bg-[var(--button-bg-hover)] mb-4">Copy valid invites</button>
          <% @invite_codes.each do |code| %>
            <div class="border border-[var(--border)] bg-[var(--surface)] px-2 py-1 text-xs"
              data-invite-codes-target="code"
              data-code="<%= code.code %>"
              data-uses-count="<%= code.uses_count %>"
              data-max-uses="<%= code.max_uses %>"
            >
              <div><strong>Code:</strong> <%= code.code %></div>
              <div><strong>Created at:</strong> <%= code.created_at.strftime("%Y-%m-%d") %></div>
              <div><strong>Uses:</strong> <%= code.uses_count %>/<%= code.max_uses %></div>
            </div>
          <% end %>
          </div>
        </details>
      <% end %>

      <% if current_user&.admin? %>
        <div class="mt-4 border border-[var(--border-muted)] bg-[var(--surface2)] p-3">
          <div class="font-bold mb-2">Admin Actions</div>
          <div class="mt-2 flex flex-wrap gap-2">
            <%= button_to "Generate 5 invites", admin_user_invite_codes_path(@user.username), method: :post, class: button_class(variant: :default, size: :sm) %>
            <%= button_to "Ban user", admin_user_ban_path(@user.username), method: :delete, data: { turbo_confirm: "Are you sure you want to ban this user? This is not reversible." }, class: button_class(variant: :danger, size: :sm) %>
          </div>
        </div>
      <% end %>
    </div>
  </aside>
  <!-- Pastes -->
  <section class="md:col-span-3">
    <div class="border border-[var(--border)] bg-[var(--surface)] shadow-sm overflow-hidden">
      <div class="border-b border-[var(--border-muted)] bg-gradient-to-b from-[var(--surface2)] to-[var(--surface)] px-4 py-3 flex items-center justify-between">
        <div class="font-black">Pastes by <%= @user.username %></div>
        <% if current_user == @user %>
          <%= link_to "New paste", root_path, class: link_class(variant: :bold, size: :sm) %>
        <% end %>
      </div>

      <div class="divide-y divide-[var(--border-muted)]">
        <% @pastes.each do |paste| %>
          <div class="px-4 py-3">
            <div class="flex items-center justify-between gap-3">
              <div class="min-w-0">
                <%= link_to short_paste_path(paste.shortcode), class: link_class(variant: :bold) do %>
                  <%= paste.title %>
                <% end %>

                <div class="text-xs text-[var(--muted)] mt-1">
                  <%= paste.created_at.strftime("%Y-%m-%d %H:%M") %>
                  <% if current_user == @user || current_user&.admin? %>
                    <%= paste.visibility.capitalize %> | <%= link_to "Edit", edit_paste_path(paste), class: link_class(variant: :muted, size: :xs) %> | <%= button_to "Delete", paste_path(paste), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this paste?" }, form_class: "inline", class: link_class(variant: :muted, size: :xs) %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @pastes.empty? %>
          <div class="text-sm text-[var(--muted)] px-4 py-6">
            This user hides many secrets!
          </div>
        <% end %>
      </div>

      <div class="border-t border-[var(--border-muted)] px-4 py-3 flex justify-center">
        <%= render "shared/pagy_nav", pagy: @pagy %>
      </div>
    </div>
  </section>
</div>
