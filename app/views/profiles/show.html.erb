<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
  <!-- Sidebar -->
  <aside class="md:col-span-1">
    <div class="border border-slate-300 bg-white shadow-sm overflow-hidden">
      <div class="border-b border-slate-200 bg-gradient-to-b from-slate-50 to-white px-4 py-3">
        <div class="font-black text-lg"><%= @user.username %></div>
      </div>

      <div class="p-4 flex flex-col items-center space-y-4">
          <%= render "shared/avatar", user: @user, size: 128 %>
          <div class="text-sm text-center">
            <div class="font-semibold text-slate-800">Member since <%= @user.created_at.strftime("%b %-d, %Y") %></div>
            <div class="font-semibold text-slate-800"><%= @paste_count %> <%= "paste".pluralize(@paste_count) %></div>
          </div>
      </div>

      <div class="p-4 border-t border-slate-200">
      <% if @user.bio.present? %>
        <div class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-1">About me</div>
        <div class="text-sm text-slate-700 whitespace-pre-line"><%= h @user.bio %></div>
      <% end %>

      <% if @user.link.present? %>
        <div class="text-xs font-bold uppercase tracking-wide text-slate-500 mb-1 mt-4">Website</div>
        <div>
          <%= link_to @user.link, @user.link, class: "text-sm text-blue-600 underline", target: "_blank", rel: "noopener" %>
        </div>
      <% end %>
      </div>
    </div>
  </aside>
  <!-- Pastes -->
  <section class="md:col-span-3">
    <div class="border border-slate-300 bg-white shadow-sm overflow-hidden">
      <div class="border-b border-slate-200 bg-gradient-to-b from-slate-50 to-white px-4 py-3 flex items-center justify-between">
        <div class="font-black">Pastes by <%= @user.username %></div>
        <% if current_user == @user %>
          <%= link_to "New paste", root_path, class: "text-sm font-semibold underline" %>
        <% end %>
      </div>

      <div class="divide-y divide-slate-200">
        <% @pastes.each do |paste| %>
          <div class="px-4 py-3">
            <div class="flex items-center justify-between gap-3">
              <div class="min-w-0">
                <%= link_to short_paste_path(paste.shortcode), class: "font-semibold hover:underline" do %>
                  <%= paste.title || "Untitled paste" %>
                <% end %>

                <div class="text-xs test-slate-500 mt-1">
                  <%= paste.created_at.strftime("%Y-%m-%d %H:%M") %>
                  <% if current_user == @user %>
                    <%= paste.visibility.capitalize %> | <%= link_to "Edit", edit_paste_path(paste), class: "hover:underline" %> | <%= button_to "Delete", paste_path(paste), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this paste?" }, form_class: "inline", class: "hover:underline" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @pastes.empty? %>
          <div class="text-xs text-slate-500 px-4 py-6">
            This user hides many secrets!
          </div>
        <% end %>
      </div>

      <div class="border-t border-slate-200 px-4 py-3">
        <%= @pagy.series_nav if @pagy.pages > 1 %>
      </div>
    </div>
  </section>
</div>
