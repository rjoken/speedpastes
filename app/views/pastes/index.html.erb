<%= render "shared/heading", title: "Public Pastes" do %>
    <div class="divide-y divide-[var(--border-muted)]">
        <% @pastes.each do |paste| %>
            <div class="px-4 py-3">
                <div class="flex items-center justify-between gap-3">
                    <div class="min-w-0">
                        <%= link_to short_paste_path(paste.shortcode), class: link_class(variant: :bold) do %>
                            <%= paste.title %>
                        <% end %>
                        <span class="text-xs text-[var(--muted)] mt-1"> by <%= link_to paste.user.username, profile_path(paste.user.id), class: link_class(variant: :muted, size: :xs) %></span>

                        <div class="text-xs text-[var(--muted)] mt-1 flex items-center gap-1">
                            <%= paste.created_at.strftime("%Y-%m-%d %H:%M") %>
                            <span>|</span> 
                            <div class="text-xs text-[var(--muted)] flex gap-1" title="Total views"><%= heroicon "eye", options: {class: "w-4 h-4"} %> <%= paste.views %></div>
                            <% if current_user == paste.user || current_user&.admin? %>
                                <span>|</span> 
                                <%= link_to "Edit", edit_paste_path(paste), class: link_class(variant: :muted, size: :xs) %> 
                                <span>|</span> 
                                <%= button_to "Delete", paste_path(paste), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this paste?" }, form_class: "inline", class: link_class(variant: :muted, size: :xs) %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>

        <% if @pastes.empty? %>
            <div class="text-sm text-[var(--muted)] px-4 py-6">
                No public pastes found.
            </div>
        <% end %>

        <div class="border-t border-[var(--border-muted)] px-4 py-3 flex justify-center">
            <%= render "shared/pagy_nav", pagy: @pagy %>
        </div>
    </div>
<% end %>
