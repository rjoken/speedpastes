<div class="max-w-md mx-auto">
  <div class="border border-[var(--border)] bg-[var(--surface)] shadow-sm overflow-hidden">
    <div class="<%= gradient_class %> px-4 py-3">
      <div class="text-lg font-black">Log in</div>
    </div>

    <div class="p-4">
      <%= form_with url: login_path, method: :post, class: "space-y-4" do %>
        <div>
          <%= label_tag :email, "Email", class: "block text-sm font-semibold" %>
          <%= email_field_tag :email, params[:email], autocomplete: "email", class: "mt-1 w-full border border-[var(--border)] px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[var(--border)]" %>
        </div>

        <div>
          <%= label_tag :password, "Password", class: "block text-sm font-semibold" %>
          <%= password_field_tag :password, nil, autocomplete: "current-password", class: "mt-1 w-full border border-[var(--border)] px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[var(--border)]" %>
        </div>

        <div class="flex items-center justify-between pt-1">
          <%= submit_tag "Log in", class: button_class(variant: :default, size: :md) %>
          <%= link_to "Forgot your password?", "#", class: link_class(size: :sm) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4 text-center text-sm text-[var(--muted)]">
    Don't have an account? <%= link_to "Sign up", signup_path, class: link_class(size: :sm) %>
  </div>
</div>
